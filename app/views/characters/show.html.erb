<h1><%= @character.name %></h1>

 <%= image_tag @character.image, :class => 'feature', :alt => @character.name if @character.image.present? %>
 <ul>
 <li>Name: <%= @character.name %></li>
 <li>Race: <%= @character.race %></li>
 <% if @character.voice_actor.present? %>
 <li>Voice Actor: <%= link_to @character.voice_actor.name, @character.voice_actor %></li>
 <% end %>
 <li>Sagas: <%= @character.sagas.map(&:title).join ", " %></li>
 <li>Signature Move: <%= @character.signature_move %></li>
 <li>Good or Evil: <%= @character.good_or_evil %></li>
 </ul>

<div class="controls">
    <%= link_to 'Edit character', edit_character_path(@character) %>
    <%= button_to 'Delete character', @character, :method => 'delete' %>
</div>    