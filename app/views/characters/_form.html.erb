
<%= form_for @character do |f| %>
<%= f.label :name %>
<%= f.text_field :name, :autofocus => true, :required => true %>

<%= f.label :race %>
<%= f.text_field :race %>

<%= f.label :voice_actor_id %>
<%= f.select :voice_actor_id, VoiceActor.pluck(:name, :id) %>

<%= f.label :saga_id %>
<%= f.select :saga_id, Saga.pluck(:title, :id) %>

<%= f.label :signature_move %>
<%= f.text_field :signature_move %>

<%= f.label :good_or_evil %>
<%= f.text_field :good_or_evil %>

<%= f.label :image %>
<%= f.url_field :image %>

<%= f.submit %>


<% end %>
